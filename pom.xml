<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.clojars.storm-amqp</groupId>
    <artifactId>storm-amqp-spout</artifactId>
    <version>0.2.8-SNAPSHOT</version>

    <name>Storm AMQP Spout</name>
    <description>AMQP input source for Storm</description>
	<url>http://github.com/gbanas/storm-amqp-spout</url>

    <developers>
        <developer>
            <name>Greg Banas</name>
            <email>banasg+github@gmail.com</email>
            <url>http://gregbanas.com</url>
        </developer>
        <developer>
            <name>Michael Rose</name>
            <email>elementation@gmail.com</email>
            <url>http://www.xorlev.com</url>
        </developer>
        <developer>
            <name>Brenden Matthews</name>
            <email>brenden@diddyinc.com</email>
            <url>http://diddyinc.com</url>
        </developer>
    </developers>

    <licenses>
        <license>
            <name>MIT License</name>
            <url>http://www.opensource.org/licenses/mit-license.php</url>
        </license>
    </licenses>

    <scm>
        <connection>scm:git:git@github.com:gbanas/storm-amqp-spout.git</connection>
        <url>https://github.com/gbanas/storm-amqp-spout</url>
        <developerConnection>scm:git:git@github.com:gbanas/storm-amqp-spout.git</developerConnection>
        <tag>HEAD</tag>
    </scm>

    <distributionManagement>
        <repository>
            <id>clojars</id>
            <name>Clojars repository</name>
            <url>https://clojars.org/repo</url>
        </repository>
    </distributionManagement>

    <repositories>
        <repository>
            <id>clojars</id>
            <url>http://clojars.org/repo</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>storm</groupId>
            <artifactId>storm</artifactId>
            <version>0.8.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>com.rabbitmq</groupId>
            <artifactId>amqp-client</artifactId>
            <version>3.1.4</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.16</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>2.3.2</version>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <links>
                        <link>http://nathanmarz.github.com/storm/doc</link>
                    </links>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>2.4</version>
            </plugin>
        </plugins>
    </build>
</project>
